<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/invoiceHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop = "3dip"
            android:paddingRight = "3dip"
            android:paddingLeft = "3dip"
            android:paddingBottom="24dip"
            android:stretchColumns="1">
            <TableRow>
                <TextView android:id="@+id/invoice_id"
                    android:text="ID: 091010-4"
                    android:padding="3dip" />
                <TextView android:id="@+id/invoice_date"
                    android:text="Date: 09/05/10"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/invoice_client"
                    android:text="Velocity Concepts"
                    android:paddingLeft="3dip"
                    android:textSize = "18px"
                    android:textStyle = "bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/invoice_status"
                    android:text="Status: Paid"
                    android:gravity="right"
                    android:padding="3dip" />
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/invoice_address"
                    android:text="458 Chase Rd"
                    android:paddingLeft="3dip"
                    android:textSize = "18px"
                    android:textStyle = "bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/invoice_region"
                    android:text="Dartmouth, MA"
                    android:paddingLeft="3dip"
                    android:textSize = "18px"
                    android:textStyle = "bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView android:id="@+id/invoice_zip"
                    android:text="02747"
                    android:paddingLeft="3dip"
                    android:textSize = "18px"
                    android:textStyle = "bold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout android:id="@+id/relativeLayout1"
        android:layout_below="@+id/invoiceHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCell">

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "Product"
            android:textColor = "#ffffff" />

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "2"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "Quantity"
            android:textColor = "#ffffff"/>

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1.5"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "MRP"
            android:textColor = "#ffffff" />

        <TextView
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:gravity = "center"
            android:padding = "5dp"
            android:text = "Total"
            android:textColor = "#ffffff" />
    </LinearLayout>

    <ListView
        android:id = "@+id/listview"
        android:layout_below="@+id/relativeLayout1"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:divider = "@null"/>

</RelativeLayout>

